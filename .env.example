# ========================================
# EXAMPLE CONFIGURATION FILE
# ========================================
# Copy this file to .env and fill in your actual values
# Only Power BI configuration is REQUIRED
# Streaming and EventHub are OPTIONAL

# ========================================
# Streaming Server (OPTIONAL)
# ========================================
# Local streaming server configuration
# Signaling server address (IP or hostname)
VITE_STREAMING_SERVER='127.0.0.1'

# Signaling port (default: 49100)
VITE_STREAMING_SIGNALING_PORT='49100'

# Media server address (usually same as STREAMING_SERVER)
VITE_STREAMING_MEDIA_SERVER='127.0.0.1'

# Media port (set to empty to auto-assign, or specify a port number)
VITE_STREAMING_MEDIA_PORT=''

# ========================================
# Session Management Service (OPTIONAL)
# ========================================
# To enable session management API, replace with your actual service URL
# Example: SESSION_SERVICE_URL='https://your-session-service.com/'
# Leave as is to disable session management
SESSION_SERVICE_URL='<ovestreamingurl>'

# ========================================
# USD Storage (OPTIONAL - Required only if Streaming is enabled)
# ========================================
# Only needed if you enable Omniverse Streaming above
USD_PATH='https://<blobname>.blob.core.windows.net/containername/folder/file.usd'
USD_SAS_TOKEN='<sastoken>'
USD_HOST_NAME='<blobname>.blob.core.windows.net'
USD_CONTAINER_NAME='<containername>'

# ========================================
# Power BI (REQUIRED)
# ========================================
# These settings are REQUIRED for the application to work
# Get your Power BI Report details from Azure Portal or Power BI Service

POWERBI_REQUEST_SCOPE='https://analysis.windows.net/powerbi/api/Report.Read.All'
POWERBI_BASIC_FILTER_SCHEMA='http://powerbi.com/product/schema#basic'

# Find this in Power BI Service > Edit Report > View > Selection Pane
POWERBI_VISUAL_ID='visual-name-from-selection-pane'

# Your Power BI dataset table and column for filtering
POWERBI_TABLE_NAME='YourTableName'
POWERBI_TABLE_COLUMN_NAME='YourColumnName'

# Get Report ID from the URL when viewing your report in Power BI Service
# Format: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
POWERBI_REPORT_ID='12345678-1234-1234-1234-123456789abc'

# Embed URL - replace <reportid> and <ctid> with your values
# <reportid>: Your Power BI Report ID (same as above)
# <ctid>: Your Azure AD Tenant ID
POWERBI_EMBED_URL='https://app.powerbi.com/reportEmbed?reportId=12345678-1234-1234-1234-123456789abc&ctid=12345678-1234-1234-1234-123456789abc'

# ========================================
# Event Hub (OPTIONAL)
# ========================================
# To enable EventHub integration, replace with your actual EventHub details
# Leave as is to disable EventHub functionality
EVENTHUB_REQUEST_SCOPE='https://eventhubs.azure.net/.default'
EVENTHUB_RESOURCE_URL='<eventhubnamespace>.servicebus.windows.net'
EVENTHUB_NAME='<eventhubname>'
EVENTHUB_GROUP_NAME='$Default'

# ========================================
# Azure AD / MSAL Authentication (REQUIRED)
# ========================================
# Get these from Azure Portal > App Registration
# Client ID: Your application (client) ID
# Authority: Your directory (tenant) ID
# Redirect URI: Should match registered URI in Azure AD app
# Post Logout Redirect URI: Where to redirect after logout

MSAL_CONFIG_CLIENT_ID='your-application-client-id'
MSAL_CONFIG_CLIENT_AUTHORITY='https://login.microsoftonline.com/your-tenant-id'
MSAL_CONFIG_REDIRECT_URI='http://localhost:5173'
MSAL_CONFIG_POST_LOGOUT_REDIRECT_URI='http://localhost:5173'
